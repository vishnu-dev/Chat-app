<style>
  .mdl-layout {
    align-items: center;
    justify-content: center;
  }
  .mdl-layout__content {
    padding: 24px;
    flex: none;
  }
  .back {
    background-image: url("images/chat-background.jpg");
    background-size: cover;
    background-repeat: no-repeat;
  }
  h1,h5 {
    font-family: 'Great Vibes', cursive;
  }
  h5 {
    margin: 0;
    padding: 0;
  }
</style>
<div class="mdl-layout mdl-js-layout mdl-color--grey-100 back">
  <center><h1>DevChat</h1><h5>a chat app</h5></center>
	<main class="mdl-layout__content">
		<div class="mdl-card mdl-shadow--6dp">
			<div class="mdl-card__title mdl-color--green mdl-color-text--white">
				<h2 class="mdl-card__title-text">DevChat - Register</h2>
			</div>
	  	<div class="mdl-card__supporting-text">
				<form action="/register" method="post">
					<div class="mdl-textfield mdl-js-textfield">
						<input class="mdl-textfield__input" name="username" type="text" id="username" />
						<label class="mdl-textfield__label" for="username">Username</label>
					</div>
					<div class="mdl-textfield mdl-js-textfield">
						<input class="mdl-textfield__input" name="password" type="password" id="userpass" />
						<label class="mdl-textfield__label" for="userpass">Password</label>
					</div>
				  <button type="submit" class="mdl-button mdl-button--colored mdl-color--green mdl-color-text--white mdl-js-button mdl-js-ripple-effect">Register</button>
				</form>
			</div>
			<div class="mdl-card__actions mdl-card--border">
        <div class="mdl-layout--spacer"></div>
        <span>Already registered?   <a href="/login"><button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">Login</button></a></span>
			</div>
		</div>
	</main>
</div>